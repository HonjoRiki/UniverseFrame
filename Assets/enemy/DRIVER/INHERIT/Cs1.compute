#version 450
#pragma kernel main

GLSLPROGRAM

layout(std430, binding = 0)buffer Result { float results[]; };

layout(std430, binding = 1)buffer Inherit { float inherits[]; };

layout(local_size_x = 1, local_size_y = 1, local_size_z = 1) in;

void main()
{
	results[gl_LocalInvocationID.x] = results[0] + inherits[0];
}

ENDGLSL